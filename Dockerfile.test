FROM python:3.11-slim

WORKDIR /app

RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      clang make \
 && rm -rf /var/lib/apt/lists/*

COPY requirements-dev.txt ./
RUN pip install --no-cache-dir -r requirements-dev.txt

COPY . .

ENV PYTHONPATH=/app

CMD ["bash", "-lc", "make -C engine minimax_tests connect4_tests engine && ./engine/minimax_tests && ./engine/connect4_tests && pytest"]
